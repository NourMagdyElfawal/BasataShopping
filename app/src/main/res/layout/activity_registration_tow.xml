<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingEnd="10dp"
            android:paddingBottom="@dimen/activity_vertical_margin">


            <ImageView
                android:id="@+id/img_store"
                android:layout_width="189dp"
                android:layout_height="178dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/ic_profile"
                app:layout_constraintBottom_toTopOf="@id/llRegister"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/llRegister"
                android:layout_width="match_parent"
                android:layout_height="435dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_store">


                <EditText
                    android:id="@+id/et_reg_store_name"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/username"
                    android:drawableEnd="@drawable/store"
                    android:drawablePadding="30dp"
                    android:drawableTint="@color/colorPrimary"
                    android:ems="10"
                    android:hint="اسم المحل التجاري"
                    android:inputType="text"
                    android:padding="10dp"
                    android:paddingEnd="15dp"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/et_reg_address"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/username"
                    android:drawableEnd="@drawable/address"
                    android:drawablePadding="30dp"
                    android:drawableTint="@color/colorPrimary"
                    android:ems="10"
                    android:hint="العنوان"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:paddingEnd="15dp"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/username"
                    android:orientation="horizontal">

                    <!--                    <com.hbb20.CountryCodePicker-->
                    <!--                        android:id="@+id/spCountryCode"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="match_parent"-->
                    <!--                        android:gravity="center"-->
                    <!--                        app:ccpDialog_keyboardAutoPopup="false"-->
                    <!--                        app:ccp_contentColor="@color/colorPrimary"-->
                    <!--                        app:ccp_autoDetectCountry="true"-->
                    <!--                        app:ccp_showFlag="true"-->
                    <!--                        app:ccp_showNameCode="false" />-->

                    <EditText
                        android:id="@+id/et_reg_location"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@android:color/transparent"
                        android:drawableEnd="@drawable/address"
                        android:drawablePadding="30dp"
                        android:drawableTint="@color/colorPrimary"
                        android:ems="10"
                        android:hint="الموقع"
                        android:maxLength="15"
                        android:padding="10dp"
                        android:paddingEnd="15dp"
                        android:textAlignment="viewEnd"
                        android:textSize="14sp" />

                </LinearLayout>


                <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/tv_reg_note"
            android:textSize="14sp" />-->

                <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Society/Flat(Optional)"
            android:textSize="14dp"
            android:id="@+id/textView4" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Society..."
            android:background="@drawable/xml_textbox_bg"
            android:id="@+id/txtSocity"
            android:layout_marginBottom="5dp"
            android:drawableRight="@mipmap/ic_next"
            android:gravity="left|center_vertical"
            android:padding="10dp"/>-->


                <EditText
                    android:id="@+id/et_reg_phone"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/username"
                    android:drawableEnd="@drawable/ic_phone"
                    android:drawablePadding="30dp"
                    android:drawableTint="@color/colorPrimary"
                    android:ems="10"
                    android:hint="رقم الهاتف"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:paddingEnd="15dp"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/et_reg_disc"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/username"
                    android:drawablePadding="30dp"
                    android:drawableTint="@color/colorPrimary"
                    android:ems="10"
                    android:hint="وصف المحل"
                    android:inputType="text"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:paddingEnd="70dp"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="روابط صفحات التواصل"
                    android:textAlignment="center" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/youtube"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/youtube"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/instagram"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/instagram"
                        android:layout_width="19dp"
                        android:layout_height="18dp"
                        android:background="@drawable/instagram"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/facebook"
                        app:layout_constraintStart_toEndOf="@id/youtube"
                        app:layout_constraintTop_toTopOf="parent"

                        />

                    <ImageView
                        android:id="@+id/facebook"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/facebook"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/instagram"
                        app:layout_constraintTop_toTopOf="parent"

                        />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reg_storeRegist"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:elevation="4dp"
                android:gravity="center_horizontal"
                android:text="تسجيل"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:cornerRadius="25dp"
                app:rippleColor="#33AAAAAA" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
